DELIMITER #

CREATE PROCEDURE IF NOT EXISTS TABLE_INSERT()
BEGIN
    DECLARE R INT;
    SET R = 5;
    inserts: LOOP
        IF R = 10 THEN
            LEAVE inserts;
        END IF;

            INSERT INTO areas
            VALUES(R, (3.14 * R * R) );

        SET R = R + 1;
    END LOOP inserts;
END#

CREATE PROCEDURE IF NOT EXISTS DISP_AREA (IN R INT) 
BEGIN

    SELECT area
    FROM areas
    WHERE radius = R;

END#

CREATE PROCEDURE IF NOT EXISTS GET_AREA (IN R INT, OUT A FLOAT) 
BEGIN

    SELECT area INTO A
    FROM areas
    WHERE radius = R;

END#
 
DELIMITER ;

CREATE TABLE
    areas (radius INT, area FLOAT);

CALL TABLE_INSERT();
CALL GET_AREA (5, @A5);
SELECT @A5;

SELECT * FROM areas;

DROP TABLE areas;

DROP PROCEDURE TABLE_INSERT;

DROP PROCEDURE GET_AREA;

DROP PROCEDURE DISP_AREA;
